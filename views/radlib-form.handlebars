{{!-- title - string, blanks - [blanks] --}}
<div class="row d-flex justify-content-center">
    <div class="col-lg-4">
        <form id="radlib">
            {{#each blanks as |blank|}}
            <div class="form-group">
                <label for="blank-{{blank.id}}">{{blank.part_of_speech}}</label>
                <input type="text" class="radlib-input form-control" id="blank-{{blank.id}}" placeholder="{{blank.part_of_speech}}">
            </div>
            {{/each}}
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/radlibForm.js"></script>